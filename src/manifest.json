{
  "name": "Bookmark Buddy",
  "description": "Let AI organize and analyze your web bookmarks",
  "manifest_version": 3,
  "{{chrome}}.manifest_version": 3,
  "{{firefox}}.manifest_version": 2,
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "contextMenus",
    "sidePanel",
    "history",
    "bookmarks",
    "scripting"
  ],
  "host_permissions": [
    "https://api.cloudflare.com/*",
    "https://tfhub.dev/*",
    "https://www.kaggle.com/*",
    "https://storage.googleapis.com/*",
    "https://www.googleapis.com/*"
  ],
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "48": "icon/48.png",
    "96": "icon/96.png",
    "128": "icon/128.png"
  },
  "omnibox": { "keyword": "bm" },
  "options_page": "src/views/page/page.html",
  "web_accessible_resources": [
    {
      "resources": ["src/views/page/page.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "side_panel": {
    "default_path": "src/views/sidepanel/sidepanel.html"
  },
  "{{chrome}}.action": {
    "default_popup": "src/views/popup/popup.html"
  },
  "{{firefox}}.browser_action": {
    "default_popup": "src/views/popup/popup.html"
  },
  "background": {
    "{{chrome}}.service_worker": "src/background.ts",
    "{{firefox}}.scripts": ["src/background.ts"],
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.ts"],
      "css": ["src/app.css"]
    }
  ]
}
